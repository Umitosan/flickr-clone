<h3>Posts from user: <%= @user.id %></h3>
<p><%= @post.description %></p>
<p> - <%= @user.username %></p>
<%= image_tag @post.avatar.url %>
<h3>tags</h3>
<% @post.tags.all.each do |tag| %>
  <p><%= tag.label %></p>
<% end %>
<hr>
  <%= link_to 'delete post', user_post_path(@user, @post), method: 'delete' %> |
  <%= link_to 'update post', edit_user_post_path(@user, @post) %> |
  <%= link_to 'add tag', new_post_tag_path(@post) %> |
  <%= link_to 'add comment', new_post_comment_path(@post) %>
<hr>
<h3>Comments</h3>
<% @post.comments.all.each do |comment| %>
<div class="comment">
  <h4><%= comment.post.user.username %></h4>
  <p><%= comment.body %></p>
</div>
<% end %>
<br>
